<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/tapping"
    tools:context=".presentation.view.tappinggame.TappingActivity">

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="129dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="93dp"
        android:layout_marginEnd="35dp"
        android:text="" />

    <TextView
        android:id="@+id/tv_info"
        android:layout_width="111dp"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="99dp"
        android:layout_marginEnd="85dp"
        android:layout_toStartOf="@+id/tv_result"
        android:text="Start Tapping" />

    <TextView
        android:id="@+id/tv_speed"
        android:layout_width="105dp"
        android:layout_height="65dp"
        android:layout_below="@+id/iv_tap"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="128dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="131dp"
        android:layout_marginBottom="318dp"
        android:text="" />

    <ImageView
        android:id="@+id/iv_tap"
        android:layout_width="159dp"
        android:layout_height="160dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="132dp"
        android:layout_marginTop="174dp"
        android:layout_marginEnd="129dp"
        android:src="@drawable/circle" />

    <ImageView
        android:id="@+id/iv_pug"
        android:layout_width="112dp"
        android:layout_height="216dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="475dp"
        app:srcCompat="@drawable/pug" />

    <TextView
        android:id="@+id/tv_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="276dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/tv_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="213dp"
        android:layout_marginTop="425dp"
        android:layout_toEndOf="@+id/tv_points"
        android:text="TextView" />
</RelativeLayout>