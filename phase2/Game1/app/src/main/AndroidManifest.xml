<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.game1">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".presentation.view.brickgame.BrickActivity"></activity>
        <activity android:name=".presentation.view.user.ScoreboardActivity" />
        <activity android:name=".presentation.view.tappinggame.TappingActivity" />
        <activity android:name=".presentation.view.jumpinggame.JumpingActivity" />
        <activity android:name=".presentation.view.user.StatisticsActivity" />
        <activity android:name=".presentation.view.user.UserMenuActivity" />
        <activity android:name=".presentation.view.user.CustomizationActivity" />
        <activity
            android:name=".presentation.view.user.RegistrationActivity"
            android:parentActivityName=".presentation.MainActivity" />
        <activity android:name=".presentation.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.view.user.LoginActivity"
            android:parentActivityName=".presentation.MainActivity" />
        <activity android:name=".presentation.view.applegame.AppleActivity" />
    </application>

</manifest>